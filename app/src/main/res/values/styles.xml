<resources>

    <style name="AppTheme" parent="AppThemeBase">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearanceSmall</item>
    </style>

    <style name="ShapeAppearanceSmall" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerSize">24dp</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="ActionBarLight" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="ActionBarDark" parent="Widget.MaterialComponents.ActionBar.Solid">
        <item name="background">@android:color/black</item>
        <item name="android:background">@android:color/black</item>
    </style>

</resources>
